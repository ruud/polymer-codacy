{
  "extends": "airbnb-base/legacy",
  "plugins": ["html","security"],
  "globals": {
    "Polymer": false,
    "Redux": false,
    "ING": false,
    "SOASTA": false,
    "BOOMR": false,
    "Raven": false,
    "Promise": false,
    "_": false,
    "sinon": false,
    "suite": false,
    "test": false,
    "fixture": false,
    "assert": false,
    "setup": false,
    "teardown": false,
    "describe": false,
    "it": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,
    "expect": false,
    "ns": false,
    "requireNs": false,
    "axios": false
  },
  "rules": {
    "no-underscore-dangle": 0, // because this is a polymer thing
    "func-names": 0, //allow annonymous functions
    "complexity": ["warn", 6] // code complexity for codacy
  },
  "settings": {
  	"html/indent": "+2"  // indentation is the <script> indentation plus two spaces.
  }
}
